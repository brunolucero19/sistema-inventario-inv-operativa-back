generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Proveedor {
  nombre        String
  email         String    @unique
  telefono      String?
  fechaCreacion DateTime  @default(now())
  fechaBaja     DateTime?
  apellido      String
  id_proveedor  Int       @id @default(autoincrement())

  @@map("Proveedores")
}

model Articulo {
  id_articulo          Int            @id @default(autoincrement())
  nombre               String
  descripcion          String
  demanda_articulo     Int
  costo_almacenamiento Float
  stock                Int
  precioVenta          Float
  cgi                  Float
  stock_seguridad      Int
  inventario_maximo    Int
  fechaBaja            DateTime?
  detallesVenta        DetalleVenta[]

  @@map("Articulos")
}

model Venta {
  id_venta   Int            @id @default(autoincrement())
  fechaVenta DateTime
  montoTotal Float
  detalles   DetalleVenta[]

  @@map("Ventas")
}

model DetalleVenta {
  id           Int      @id @default(autoincrement())
  cantidad     Int
  totalDetalle Float
  ventaId      Int
  venta        Venta    @relation(fields: [ventaId], references: [id_venta])
  articuloId   Int
  articulo     Articulo @relation(fields: [articuloId], references: [id_articulo])

  @@map("DetallesVenta")
}
